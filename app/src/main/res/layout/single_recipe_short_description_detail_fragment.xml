<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_current_recipe_title"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/tv_ingredient_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/ingredient_list"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/tv_current_recipe_title"
        app:layout_constraintRight_toRightOf="@+id/tv_current_recipe_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_recipe_title" />

    <TextView
        android:id="@+id/tv_quanity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="8dp"
        tools:layout_width="50dp"
        tools:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ingredient_list_title"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_ingredient_list_title" />

    <TextView
        android:id="@+id/tv_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        tools:layout_width="50dp"
        tools:layout_height="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/tv_ingredient_list_title"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ingredient_list_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recipe_step_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_quanity"
        app:layout_constraintRight_toRightOf="@+id/tv_ingredient_list_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_ingredient_list_title"
        android:layout_marginTop="8dp" />
</android.support.constraint.ConstraintLayout>
    </ScrollView>